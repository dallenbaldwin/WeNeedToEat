views:
  - type: table
    name: Table
    filters:
      and:
        - file.inFolder("tasks")
    order:
      - file.name
      - file.ctime
      - file.mtime
      - file.tags
    sort:
      - property: file.mtime
        direction: DESC
      - property: file.tags
        direction: ASC
    columnSize: {}
